<%= form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :input_group , defaults: { input_html: { class: 'form-control-sm' }, label_html: { class: 'col-form-label col-form-label-sm' } }   ) do |f| %>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"> <i class="bi bi-person"> </i> </span>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email@exemplo.com"  %>
</div>

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><i class="bi bi-key"></i> </span>
    </div>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
</div>

<div class="d-flex justify-content-center">

    <%= button_tag class: 'btn btn-outline-success', data: { disable_with: '<i class="spinner-border text-primary"></i> Carrengando...' }, title: 'Entrar no Sistema' do %>
    <i class="bi bi-key"> </i> <span class="text">Entrar </span>
    <% end %>
</div>
<% end %>